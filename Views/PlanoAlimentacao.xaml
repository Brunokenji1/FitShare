<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.PlanoAlimentacao"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Plano Alimentação"
    Background="#0c1420"
    IconImageSource="alimentacao.png"
    NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout
                x:Name="cadastro_alimentacao"
                Margin="25"
                Spacing="10">
                <Image
                    Margin="0,100,0,30"
                    HeightRequest="146"
                    Source="logo.png"
                    WidthRequest="118" />
                <Label
                    Margin="0,10,0,40"
                    FontAttributes="Bold"
                    FontSize="Title"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Queremos cuidar de você! Clique abaixo e nos conte se possui alguma alergia alimentar ou qual é seu estilo alimentar."
                    TextColor="White" />
                <Button
                    Margin="0,25"
                    BackgroundColor="#01C853"
                    Clicked="BtnCadastrarAlimentacao"
                    FontSize="20"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Text="Cadastro alimentação"
                    TextColor="Black"
                    WidthRequest="330" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="alimentacao" IsVisible="False">
                <Grid Background="#003918" ColumnDefinitions="*,Auto">
                    <Label
                        Padding="30,15,100,20"
                        BackgroundColor="#003918"
                        FontSize="20"
                        Text="Plano Alimentar"
                        TextColor="White" />

                    <ImageButton
                        Grid.Column="1"
                        Margin="4,4,10,4"
                        Padding="2"
                        HeightRequest="32"
                        HorizontalOptions="Center"
                        Source="plus_green.png"
                        VerticalOptions="Center"
                        WidthRequest="32" />

                </Grid>

                <Label
                    Padding="20,15,0,0"
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Meus Planos"
                    TextColor="White" />
                <Button
                    Margin="30,25,30,25"
                    Background="Transparent"
                    BorderColor="White"
                    BorderWidth="1"
                    Clicked="BotaoPlanoAlimentar"
                    CornerRadius="20"
                    HeightRequest="80"
                    Text="Plano A"
                    TextColor="White"
                    WidthRequest="365" />
                <Label
                    BackgroundColor="White"
                    FontSize="25"
                    HeightRequest="1.5"
                    TextColor="White"
                    WidthRequest="350" />
                <Button
                    Margin="30,25,30,25"
                    Background="Transparent"
                    BorderColor="White"
                    BorderWidth="1"
                    Clicked="BotaoPlanoAlimentar"
                    CornerRadius="20"
                    HeightRequest="80"
                    Text="Plano B"
                    TextColor="White"
                    WidthRequest="365" />
                <Label
                    Background="White"
                    FontSize="25"
                    HeightRequest="1.5"
                    HorizontalOptions="Center"
                    TextColor="White"
                    WidthRequest="350" />

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>