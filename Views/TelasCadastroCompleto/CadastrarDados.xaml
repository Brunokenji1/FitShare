<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.TelasCadastroCompleto.CadastrarDados"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppFitShare.ViewModels"
    Title="CadastrarDados"
    Background="#0c1420">

    <VerticalStackLayout Margin="15">

        <Label
            FontSize="Title"
            HorizontalOptions="Center"
            Text="Completar Cadastro"
            VerticalOptions="Center" />
        <Label Text="Data de nascimento*" TextColor="White" />

        <DatePicker
            Background="White"
            Format="dd/MM/yyyy"
            MaximumDate="2015/01/01"
            MinimumDate="1925/01/01"
            TextColor="Black" />

        <Label Text="Idade*" TextColor="White" />
        <Entry
            x:Name="txt_idade"
            Background="White"
            ClearButtonVisibility="WhileEditing"
            Keyboard="Numeric"
            MaxLength="3"
            Placeholder="Idade"
            TextColor="Black" />
        <Label Text="Opções de Biotipo*" TextColor="White" />
        <Grid ColumnDefinitions="*, *, Auto" ColumnSpacing="6" HorizontalOptions="Center">
            <Button
                x:Name="OnEctomorfo"
                Grid.Column="0"
                FontSize="10"
                Background="Transparent"
                BorderColor="White"
                BorderWidth="1"
                Text="Ectomorfo"/>
            <Button
                x:Name="OnMesomorfo"
                FontSize="10"
                Grid.Column="1"
                Background="Transparent"
                BorderColor="White"
                BorderWidth="1"
                Text="Mesomorfo" />
            <Button
                FontSize="10"
                Grid.Column="2"
                x:Name="OnEndomorfo"
                Background="Transparent"
                BorderColor="White"
                BorderWidth="1"
                Text="Endomorfo" />
        </Grid>
        <Label Text="Peso*" TextColor="White" />
        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="0">

            <Entry
                x:Name="txt_peso"
                Grid.Column="0"
                Background="White"
                ClearButtonVisibility="WhileEditing"
                Keyboard="Numeric"
                MaxLength="3"
                Placeholder="Peso em Kg"
                TextColor="Black" />
            <Label
                Grid.Column="1"
                Padding="5,13"
                Background="white"
                FontAttributes="Bold"
                FontSize="15"
                Text="kg"
                VerticalOptions="Center" />
        </Grid>
        <Label Text="Altura*" TextColor="White" />
        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="0">

            <Entry
                x:Name="txt_altura"
                Background="White"
                Grid.Column="0"
                ClearButtonVisibility="WhileEditing"
                Keyboard="Numeric"
                MaxLength="3"
                Placeholder="Altura em cm"
                TextColor="Black" />
            <Label
                Grid.Column="1"
                Padding="5,13"
                Background="white"
                FontAttributes="Bold"
                FontSize="15"
                Text="cm"
                VerticalOptions="Center" />
        </Grid>
        <Label Text="Telefone*" TextColor="White" />
        <Entry
            x:Name="txt_telefone"
            Background="White"
            ClearButtonVisibility="WhileEditing"
            Keyboard="Telephone"
            MaxLength="15"
            Placeholder="(XX) XXXXX-XXXX"
            TextChanged="OnTelefoneTextChanged"
            TextColor="Black" />

        <Button
            Margin="0,45,0,0"
            BackgroundColor="#01C853"
            FontFamily="OpenSansSemibold"
            FontSize="20"
            HeightRequest="50"
            HorizontalOptions="Center"
            Text="Continuar"
            TextColor="Black"
            WidthRequest="330" />



    </VerticalStackLayout>
</ContentPage>