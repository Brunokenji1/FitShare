<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.TelasCadastroCompleto.TelasCadastroSaudeCondicionamento.RFOpcoesOrtopedicas"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RFOpcoesOrtopedicas"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>

        <VerticalStackLayout>
            <Label
                Margin="10"
                FontFamily="Poppins"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="Restrição Físicas Ortopédicas"
                TextColor="White" />
            <Border
                x:Name="btn_ArtroseNoQuadrilOuOmbro"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Sedentario"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnArtroseNoQuadrilOuOmbro" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo1"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Artrose no quadril ou ombro"
                        TextColor="White" />

                </VerticalStackLayout>


            </Border>

            <Border
                x:Name="btn_CirurgiaRecente"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Cirurgia Recente"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnCirurgiaRecente" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo2"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Cirurgia recente (até 6 meses)"
                        TextColor="White" />

                </VerticalStackLayout>



            </Border>
            <Border
                x:Name="btn_DorLombar"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Dor lombar"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnDorLombar" />
                </Border.GestureRecognizers>
                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo3"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Dor lombar / hérnia de disco"
                        TextColor="White" />

                </VerticalStackLayout>



            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>