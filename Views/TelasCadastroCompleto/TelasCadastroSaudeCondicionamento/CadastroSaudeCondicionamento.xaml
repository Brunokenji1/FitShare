                                FontSize="13"
                                Text="Dificuldade para caminhar"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <ImageButton
                                Grid.Column="1"
                                Background="Transparent"
                                ClassId="Dificuldade para caminhar"
                                Clicked="ImageButton_Clicked"
                                HeightRequest="30"
                                HorizontalOptions="End"
