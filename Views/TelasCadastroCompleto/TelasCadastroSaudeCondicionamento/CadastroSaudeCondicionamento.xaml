                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Condicao Medica"
                Stroke="#a9a9a9"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">


                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lbl"
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Condição Medica"
                        TextColor="White" />

                    <Button Clicked="Button_Clicked" Text="Adicionar Condição Medica" />
                </VerticalStackLayout>


            </Border>





