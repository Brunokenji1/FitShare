<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.TelasCadastroCompleto.TelasCadastroSaudeCondicionamento.RFOpcoesNeurologicas"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RFOpcoesNeurologicas"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>

        <VerticalStackLayout>
            <Label
                Margin="10"
                FontFamily="Poppins"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="Restrição Físicas Neurológicas / de equilíbrio"
                TextColor="White" />
            <Border
                x:Name="btn_CoordenacaoMotora"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Dificuldade de coordenação motora"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnDificuldadeDeCoordenacaoMotora" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo1"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Dificuldade de coordenação motora"
                        TextColor="White" />

                </VerticalStackLayout>


            </Border>

            <Border
                x:Name="btn_FaltaDeEquilibrio"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Falta de equilibrio"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnFaltaDeEquilibrio" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo2"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Falta de equilíbrio / risco de queda"
                        TextColor="White" />

                </VerticalStackLayout>



            </Border>
            <Border
                x:Name="btn_TonturasFrequentes"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Tonturas frequentes"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnTonturasFrequentes" />
                </Border.GestureRecognizers>
                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo3"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Tonturas frequentes"
                        TextColor="White" />

                </VerticalStackLayout>



            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>