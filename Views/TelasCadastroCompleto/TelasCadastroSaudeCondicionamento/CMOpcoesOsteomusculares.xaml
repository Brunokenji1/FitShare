<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.TelasCadastroCompleto.TelasCadastroSaudeCondicionamento.CMOpcoesOsteomusculares"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CMOpcoesOsteomusculares"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout Spacing="30">
        <Label
            Margin="0,70,0,20"
            FontAttributes="Bold"
            FontFamily="Poppins"
            FontSize="Title"
            HorizontalOptions="Center"
            Text="Osteomusculares"
            TextColor="White" />
        <Border
            x:Name="btn_artrite"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="Artrite"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnArtrite" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo1"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Artrite"
                    TextColor="White" />

            </VerticalStackLayout>
        </Border>

        <Border
            x:Name="btn_artrose"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="Artrose"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnArtrose" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo2"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Artrose"
                    TextColor="White" />

            </VerticalStackLayout>
        </Border>

        <Border
            x:Name="btn_osteoporose"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="Osteoporose"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnOsteoporose" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo3"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Osteoporose"
                    TextColor="White" />

            </VerticalStackLayout>
        </Border>
        <Border
            x:Name="btn_tendinite"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="Tendinite"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnTendinite" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo4"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Tendinite"
                    TextColor="White" />

            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>