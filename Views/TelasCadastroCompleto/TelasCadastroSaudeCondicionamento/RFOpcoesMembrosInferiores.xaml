<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.TelasCadastroCompleto.TelasCadastroSaudeCondicionamento.RFOpcoesMembrosInferiores"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RFOpcoesMembrosInferiores"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>

        <VerticalStackLayout Spacing="30" Margin="0,15">
            <ImageButton
            Grid.Column="0"
            Margin="15,5"
            Background="#01c853"
            Clicked="BtnVoltar"
            CornerRadius="100"
            HeightRequest="20"
            HorizontalOptions="Start"
            Source="black_back.png"
            WidthRequest="50" />
            <Label
                Margin="0,15,0,20"
                FontAttributes="Bold"
                FontFamily="Poppins"
                FontSize="Title"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="ðŸ¦µ Membros Inferiores"
                TextColor="White" />

            <Border
                x:Name="btn_dificuldade_para_caminhar"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Dificuldade para caminhar"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnDificuldadeParaCaminhar" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo1"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Dificuldade para caminhar"
                        TextColor="White" />

                </VerticalStackLayout>

            </Border>



            <Border
                x:Name="btn_dor_no_joelho"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Dor no joelho"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnDorNoJoelho" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo2"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Dor no joelho"
                        TextColor="White" />

                </VerticalStackLayout>

            </Border>




            <Border
                x:Name="btn_fraqueza_nas_pernas"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Fraqueza nas pernas"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnFraquezaNasPernas" />
                </Border.GestureRecognizers>
                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo3"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Fraqueza nas pernas"
                        TextColor="White" />

                </VerticalStackLayout>

            </Border>

            <Border
                x:Name="btn_problemas_no_quadril"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Problemas no quadril"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnProblemasNoQuadril" />
                </Border.GestureRecognizers>
                <VerticalStackLayout Spacing="5" WidthRequest="300">
                    <Label
                        x:Name="lblTitulo4"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Problemas no quadril"
                        TextColor="White" />

                </VerticalStackLayout>

            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>