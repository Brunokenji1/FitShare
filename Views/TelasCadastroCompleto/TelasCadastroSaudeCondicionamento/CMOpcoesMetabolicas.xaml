            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnObesidade" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo2"
