    Title="CMOpcoesMetabolicas"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout Spacing="30">
        <Label
            Margin="0,70,0,20"
            FontAttributes="Bold"
            FontFamily="Poppins"
            FontSize="Title"
            HorizontalOptions="Center"
