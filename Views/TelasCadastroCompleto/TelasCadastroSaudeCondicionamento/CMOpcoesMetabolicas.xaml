            TextColor="White" />

        <Border
            x:Name="btn_colesterol_alto"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="Colesterol alto"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnColesterolAlto" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
