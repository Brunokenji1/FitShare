<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.TelasCadastroCompleto.TelasCadastroSaudeCondicionamento.CMOpcoesRespiratorias"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CMOpcoesRespiratorias"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout Spacing="30">
        <Label
            Margin="0,70,0,20"
            FontAttributes="Bold"
            FontFamily="Poppins"
            FontSize="Title"
            HorizontalOptions="Center"
            Text="Respiratórias"
            TextColor="White" />
        <Border
            x:Name="btn_asma"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="Asma"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnAsma" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo1"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Asma"
                    TextColor="White" />

            </VerticalStackLayout>
        </Border>
        <Border
            x:Name="btn_bronquite_cronica"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="Bronquite crônica"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnBronquiteCronica" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo2"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Bronquite crônica"
                    TextColor="White" />

            </VerticalStackLayout>
        </Border>
        <Border
            x:Name="btn_DPOC"
            Margin="10"
            Padding="10,20"
            BackgroundColor="Transparent"
            ClassId="DPOC"
            Stroke="#01b853"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="BtnDPOC" />
            </Border.GestureRecognizers>
            <VerticalStackLayout Spacing="5" WidthRequest="300">
                <Label
                    x:Name="lblTitulo3"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="DPOC (Doença Pulmonar Obstrutiva Crônica)"
                    TextColor="White" />

            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>