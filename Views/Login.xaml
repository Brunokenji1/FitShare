<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" >
            <GradientStop Color="#0D0F1A" Offset="0.3" />
            <GradientStop Color="#00b140" Offset="1.1" />
        </LinearGradientBrush>
    </ContentPage.Background>
        
    <ScrollView>
        <VerticalStackLayout
            Padding="15"
            Spacing="10"
            VerticalOptions="Center">
            <Image
                Margin="0,13,0,40"
                HeightRequest="146"
                Source="logo.png"
                WidthRequest="118" />
            <Label
                Padding="0,0,0,30"
                FontFamily="OpenSansSemibold"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="Fazer Login"
                TextColor="AliceBlue" />
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="15"
                Text="Username ou E-mail"
                TextColor="White" />
            <Entry
                x:Name="txt_usuario"
                Background="White"
                Placeholder="Digite seu Username ou E-mail"
                TextColor="Black" />

            <Label
                FontFamily="OpenSansSemibold"
                FontSize="15"
                Text="Senha"
                TextColor="White" />
            <Entry
                x:Name="txt_senha"
                BackgroundColor="White"
                IsPassword="True"
                Placeholder="Digite sua Senha"
                TextColor="Black" />
            <Label FontSize="14" Text="Recupera senha">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapRecuperarSenha" />
                </Label.GestureRecognizers>
            </Label>
            <Button
                Margin="0,45,0,0"
                BackgroundColor="#01C853"
                Clicked="ValidarLogin"
                FontFamily="OpenSansSemibold"
                FontSize="20"
                HeightRequest="50"
                HorizontalOptions="Center"
                Pressed="Button_Pressed"
                Text="Entrar"
                TextColor="Black"
                WidthRequest="330" />

            <HorizontalStackLayout
                Margin="0,4"
                HorizontalOptions="Center"
                Spacing="10">
                <Label
                    FontSize="15"
                    Text="NÃ£o tem Cadastro?"
                    TextColor="White" />
                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="15"
                    Text="Cadastrar"
                    TextColor="White"
                    TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapCadastrar" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>