<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout
            Margin="15"
            Spacing="10"
            VerticalOptions="Center">
            <Image
                Margin="0,13,0,40"
                HeightRequest="146"
                Source="logo.png"
                WidthRequest="118" />
            <Label
                Padding="0,0,0,30"
                FontFamily="OpenSansSemibold"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="Fazer Login"
                TextColor="AliceBlue" />

            <Label
                FontFamily="OpenSansSemibold"
                FontSize="16"
                Text="Username ou E-mail"
                TextColor="White" />
            <Border
                Padding="8"
                Background="White"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.3"
                        Radius="10"
                        Offset="5,5" />
                </Border.Shadow>
                <Entry
                    FontSize="15"
                    x:Name="txt_usuario"
                    Background="White"
                    ClearButtonVisibility="WhileEditing"
                    Placeholder="Digite seu Username ou E-mail"
                    TextColor="Black" />

            </Border>
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="16"
                Text="Senha"
                TextColor="White" />
            <Border
                Padding="8"
                Background="White"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.3"
                        Radius="10"
                        Offset="5,5" />
                </Border.Shadow>
                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="0">
                    <Entry
                        FontSize="15"
                        x:Name="txt_senhalogin"
                        Grid.Column="0"
                        BackgroundColor="White"
                        ClearButtonVisibility="WhileEditing"
                        IsPassword="True"
                        Placeholder="Digite sua Senha"
                        TextColor="Black" />
                    <ImageButton
                        Grid.Column="1"
                        Background="White"
                        Clicked="IbtnSenhaVisibilidade"
                        HeightRequest="46"
                        HorizontalOptions="End"
                        Source="eye_closed.png"
                        WidthRequest="10" />
                </Grid>
            </Border>
            <Label
                FontSize="14"
                Text="Recupera senha"
                TextColor="White">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapRecuperarSenha" />
                </Label.GestureRecognizers>
            </Label>
            <Button
                Margin="0,45,0,0"
                BackgroundColor="#01C853"
                Clicked="ValidarLogin"
                FontFamily="OpenSansSemibold"
                FontSize="20"
                HeightRequest="50"
                HorizontalOptions="Center"
                Text="Entrar"
                TextColor="Black"
                WidthRequest="330" />

            <HorizontalStackLayout
                Margin="0,4"
                HorizontalOptions="Center"
                Spacing="10">
                <Label
                    FontSize="15"
                    Text="NÃ£o tem Cadastro?"
                    TextColor="White" />
                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="15"
                    Text="Cadastrar"
                    TextColor="White"
                    TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapCadastrar" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>