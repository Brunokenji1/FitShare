<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.SelecionarGrupoMuscular"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SelecionarGrupoMuscular"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout Spacing="40">
            <ImageButton
                Margin="15,30"
                Clicked="BtnVoltar"
                HorizontalOptions="Start"
                Source="back.png" />

            <Label
                Margin="0,20"
                FontSize="35"
                HorizontalOptions="Center"
                Text="Grupos musculares"
                TextColor="White" />
            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Membros Inferiores"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnTreinosInferiores" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    Spacing="5"
                    VerticalOptions="Center">
                    <Image
                        HeightRequest="40"
                        Source="leg.png"
                        WidthRequest="40" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalTextAlignment="Center"
                        Text="Membros Inferiores"
                        TextColor="White"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>
            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Membros Inferiores"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnTreinosSuperiores" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    Spacing="5"
                    VerticalOptions="Center">
                    <Image
                        HeightRequest="40"
                        Source="arm.png"
                        WidthRequest="40" />

                    <Label
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalTextAlignment="Center"
                        Text="Membros Superiores"
                        TextColor="White"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>
            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                Padding="10,20"
                BackgroundColor="Transparent"
                ClassId="Membros Inferiores"
                Stroke="#01b853"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="2">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BtnTreinosPosturaColuna" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    Spacing="5"
                    VerticalOptions="Center">
                    <Image
                        HeightRequest="40"
                        Source="coluna.png"
                        WidthRequest="40" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="25"
                        HorizontalTextAlignment="Center"
                        Text="Postura e Coluna"
                        TextColor="White"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>