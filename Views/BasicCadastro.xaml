<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.BasicCadastro"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BasicCadastro"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.8" Color="#0D0F1A" />
            <GradientStop Offset="1.1" Color="#00b140" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>

        <VerticalStackLayout Margin="15" Spacing="10">
            <Label
                Margin="10"
                FontFamily="OpenSansSemibold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Crie sua conta para começar"
                TextColor="White" />

            <Label
                FontFamily="OpenSansSemibold"
                FontSize="16"
                Text="Nome*"
                TextColor="White"
                VerticalOptions="Center" />
            <Border
                Padding="8"
                Background="White"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                
                <Entry
                    x:Name="txt_nome"
                    BackgroundColor="Transparent"
                    ClearButtonVisibility="WhileEditing"
                    FontSize="15"
                    Placeholder="Digite seu nome"
                    TextColor="Black" />
            </Border>

            <Label
                FontFamily="OpenSansSemibold"
                FontSize="16"
                Text="Username*"
                TextColor="White" />

            <Border
                Padding="8"
                Background="White"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                
                <Entry
                    x:Name="txt_username"
                    BackgroundColor="Transparent"
                    ClearButtonVisibility="WhileEditing"
                    FontSize="15"
                    Placeholder="Digite seu Username"
                    TextColor="Black" />
            </Border>
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="16"
                Text="Email*"
                TextColor="White" />
            <Border
                Padding="8"
                Background="White"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                
                <Entry
                    x:Name="txt_email"
                    BackgroundColor="Transparent"
                    ClearButtonVisibility="WhileEditing"
                    FontSize="15"
                    Keyboard="Email"
                    Placeholder="Digite seu E-mail"
                    TextColor="Black" />
            </Border>
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="16"
                Text="Senha*"
                TextColor="White" />
            <Border
                Padding="8"
                Background="White"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                
                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="0">

                    <Entry
                        x:Name="txt_senha"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="15"
                        IsPassword="True"
                        Placeholder="Digite sua senha"
                        TextColor="Black" />
                    <ImageButton
                        Grid.Column="1"
                        Background="White"
                        Clicked="IbtnSenhaVisibilidade"
                        HorizontalOptions="End"
                        Source="eye_closed.png" />
                </Grid>
            </Border>
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="16"
                Text="Confirmar Senha*"
                TextColor="White" />
            <Border
                Padding="8"
                Background="White"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

              
                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="0">

                    <Entry
                        x:Name="txt_confirmarSenha"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="15"
                        IsPassword="True"
                        Placeholder="Digite novamente sua senha"
                        TextColor="Black" />
                    <ImageButton
                        Grid.Column="1"
                        Background="White"
                        Clicked="IbtnConfirmarSenhaVisibilidade"
                        HorizontalOptions="End"
                        Source="eye_closed.png" />
                </Grid>
            </Border>
            <Label
                Padding="5"
                FontSize="14"
                HorizontalOptions="Center"
                Text=" Mínimo 8 Caracteres"
                TextColor="White" />

            <Button
                Margin="0,25"
                BackgroundColor="#01C853"
                Clicked="Button_Clicked"
                FontSize="20"
                HeightRequest="50"
                HorizontalOptions="Center"
                Text="Cadastrar"
                TextColor="Black"
                WidthRequest="330" />
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>