<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.BasicCadastro"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BasicCadastro"
    Background="Black">
    <ScrollView>

        <VerticalStackLayout Padding="10" Spacing="15">
            <Label
                Margin="45"
                FontFamily="OpenSansSemibold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Crie sua conta para começar"
                TextColor="White" />
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="15"
                Text="Nome"
                TextColor="White"
                VerticalOptions="Center" />
            <Entry x:Name="txt_nome" TextColor="Black" Placeholder="Digite seu nome" BackgroundColor="White" />
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="15"
                Text="Username"
                TextColor="White" />
            <Entry x:Name="txt_username" TextColor="Black" Placeholder="Digite seu Username" BackgroundColor="White" />
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="15"
                Text="Email"
                TextColor="White" />
            <Entry x:Name="txt_email" TextColor="Black" Placeholder="Digite seu E-mail" BackgroundColor="White" />
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="15"
                Text="Senha"
                TextColor="White" />
            <Entry
                x:Name="txt_senha"
                BackgroundColor="White"
                IsPassword="True"
                TextColor="Black"
                Placeholder="Digite sua senha"/>
            <Label
                FontFamily="OpenSansSemibold"
                FontSize="15"
                Text="Confirmar Senha"
                TextColor="White" />
            <Entry
                x:Name="txt_confirmarSenha"
                BackgroundColor="White"
                IsPassword="True" 
                TextColor="Black"
                Placeholder="Digite novamente sua senha"/>
            <Label
                Padding="5"
                FontSize="14"
                HorizontalOptions="Center"
                Text=" Mínimo 8 Caracteres"
                TextColor="White" />
            <Button
                Margin="0,50"
                BackgroundColor="#01C853"
                Clicked="Button_Clicked"
                FontSize="20"
                HeightRequest="50"
                HorizontalOptions="Center"
                Text="Cadastrar"
                TextColor="Black"
                WidthRequest="330" />
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>