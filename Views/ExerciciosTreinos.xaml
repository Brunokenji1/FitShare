<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.ExerciciosTreinos"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ExerciciosTreinos"
    NavigationPage.HasNavigationBar="False">
    <ScrollView>

        <VerticalStackLayout BackgroundColor="#0C1420">
            <HorizontalStackLayout Padding="5,15,0,50" BackgroundColor="#003918">
                <ImageButton
                    Clicked="Voltar"
                    HorizontalOptions="Start"
                    Source="back.png" />
                <HorizontalStackLayout Spacing="110">
                    <Label
                        FontSize="18"
                        Text="Treino A"
                        TextColor="White"
                        VerticalOptions="Start" />
                    <Label
                        FontSize="15"
                        HorizontalOptions="End"
                        Text="1/3 treinos concluídos"
                        TextColor="White" />
                </HorizontalStackLayout>
            </HorizontalStackLayout>
            <Button
                Margin="0,15,0,15"
                BackgroundColor="White"
                Text="Iniciar treino"
                TextColor="Black"
                VerticalOptions="Center"
                WidthRequest="200" />
            <Label
                Padding="15,20"
                FontSize="18"
                Text="Lista de Exercícios"
                TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>