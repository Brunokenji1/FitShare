<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.ExerciciosTreinos"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ExerciciosTreinos"
    NavigationPage.HasNavigationBar="False">
    <ScrollView>

        <VerticalStackLayout BackgroundColor="#0C1420">
            <HorizontalStackLayout Padding="5,15,0,50" BackgroundColor="#003918">
                <HorizontalStackLayout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35" />
                            <ColumnDefinition Width="135" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ImageButton
                            Grid.Row="0"
                            Grid.Column="0"
                            Clicked="Voltar"
                            HorizontalOptions="Start"
                            Source="back.png" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            FontSize="18"
                            Text="Treino A"
                            TextColor="White"
                            VerticalOptions="Start" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="3"
                            FontSize="15"
                            HorizontalOptions="Start"
                            Text="1/3 treinos concluídos "
                            TextColor="White" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="0,20,0,0"
                            BackgroundColor="White"
                            Text="Iniciar treino"
                            TextColor="Black"
                            VerticalOptions="Center"
                            WidthRequest="200" />
                    </Grid>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
            <Label
                Padding="15,20"
                FontSize="18"
                Text="Lista de Exercícios"
                TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>