<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.MeusTreinos"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Treinos"
    BackgroundColor="#0c1420"
    IconImageSource="treino.png"
    NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout
                x:Name="cadastro_saude"
                Margin="25"
                Spacing="10">
                <Image
                    Margin="0,100,0,30"
                    HeightRequest="146"
                    Source="logo.png"
                    WidthRequest="118" />
                <Label
                    Margin="0,10,0,40"
                    FontAttributes="Bold"
                    FontSize="Title"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Queremos cuidar de você! Clique abaixo e nos conte um pouco sobre os seus dados físicos, nível de atividade, objetivo e possíveis restrições para continuarmos."
                    TextColor="White" />

                <Button
                    Margin="0,25"
                    BackgroundColor="#01C853"
                    Clicked="BtnCadastroSaude"
                    FontSize="20"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Text="Cadastro informações de saúde"
                    TextColor="Black"
                    WidthRequest="330" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="dados" IsVisible="False">
                <HorizontalStackLayout>
                    <Grid BackgroundColor="#003918" ColumnDefinitions="*,auto">
                        <Label
                            Padding="30,15,100,20"
                            FontFamily="Poppins"
                            FontSize="20"
                            Text="Treino"
                            TextColor="White"
                            VerticalOptions="Start" />
                        <ImageButton
                            Grid.Column="1"
                            Margin="4,4,10,4"
                            Padding="2"
                            HeightRequest="32"
                            HorizontalOptions="Center"
                            Source="plus_green.png"
                            VerticalOptions="Center"
                            WidthRequest="375" />   
                    </Grid>
                </HorizontalStackLayout>

                <Label
                    Padding="20,15,0,0"
                    FontSize="18"
                    Text="Treinos de hoje!"
                    TextColor="White" />
                <Button
                    x:Name="BotaoAddTreino"
                    Margin="30,25,30,25"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    BorderWidth="1"
                    Clicked="BotaoIniciarTreinoClicked"
                    CornerRadius="20"
                    HeightRequest="80"
                    Text="Treino A"
                    TextColor="White" />
                <Label
                    BackgroundColor="White"
                    FontSize="25"
                    HeightRequest="1.5"
                    TextColor="White"
                    WidthRequest="350" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
