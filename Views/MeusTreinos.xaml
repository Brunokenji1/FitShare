<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.MeusTreinos"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Treinos"
    Background="#0c1420"
    IconImageSource="treino.png">
    <ScrollView>
        
    <VerticalStackLayout>
        <Label
            BackgroundColor="Black"
            Text="Treinos de hoje "
            TextColor="White"
            VerticalOptions="Start"
            Padding="30,10"/>
        <Button x:Name="BotaoAddTreino"
            Text="Treino A"
            BorderColor="White"
            BorderWidth="2"
            CornerRadius="20"
            Background="Transparent"
            Clicked="BotaoIniciarTreinoClicked"
            />
        <Button x:Name="BotaoAddTreino"
            Text=""
            BorderColor="White"
            BorderWidth="2"
            CornerRadius="20"
            Background="Transparent"
            Clicked="BotaoIniciarTreinoClicked"
            />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>