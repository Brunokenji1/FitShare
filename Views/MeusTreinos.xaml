<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppFitShare.Views.MeusTreinos"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Treinos"
    Background="#0c1420"
    IconImageSource="treino.png">
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Padding="20,15,1000,15"
                    Background="#003918"
                    BackgroundColor="Black"
                    Text="Treino"
                    TextColor="White"
                    VerticalOptions="Start" />
            </HorizontalStackLayout>
            <Label
                Padding="20,15,0,0"
                FontSize="18"
                Text="Treinos de hoje!"
                TextColor="White" />
            <Button
                x:Name="BotaoAddTreino"
                Margin="30,20,30,0"
                Background="Transparent"
                BorderColor="White"
                BorderWidth="1"
                Clicked="BotaoIniciarTreinoClicked"
                CornerRadius="20"
                HeightRequest="80"
                Text="Treino A"
                TextColor="White" />
            <Button
                x:Name="AddBotaoAddTreino"
                Margin="30,40,30,0"
                Background="Transparent"
                BorderColor="White"
                BorderWidth="1"
                Clicked="BotaoIniciarTreinoClicked2"
                CornerRadius="20"
                HeightRequest="80"
                Text="Treino B"
                TextColor="White" />
            <ImageButton
                Margin="18,20"
                Padding="5,5,5,5"
                BackgroundColor="#003918"
                Clicked="AddTreinoPersonalizado"
                CornerRadius="100"
                HeightRequest="32"
                HorizontalOptions="End"
                Source="vetor.png"
                VerticalOptions="End"
                WidthRequest="32" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
