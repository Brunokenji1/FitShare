<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="AppFitShare.FlyoutPageMenu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:AppFitShare.Views"
    Title="FlyoutPageMenu"
    FlyoutLayoutBehavior="Popover">
    <FlyoutPage.Flyout>
        <!--  Página de Manu  -->
        <pages:Menu />


    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <!--  Página de conteúdo central  -->
        <NavigationPage>
            <x:Arguments>
                <pages:Perfil />
            </x:Arguments>
        </NavigationPage>


    </FlyoutPage.Detail>
</FlyoutPage>